@{
    List<Donations> donations = Model;
}

<html>
<head>
    <title>Donation List</title>
</head>
<body>
    <h2>Donation List</h2>

    <table>
        <thead>
            <tr>
                <th>Receipt Number</th>
                <th>Date</th>
                <th>OrganizationId</th>
                <th>Donor Name</th>
                <th>Amount</th>
                <th>Payment Method</th>
                <th>User ID</th>
                <th>Card ID</th>
                <th>Frequency</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var donation in donations)
            {
                <tr>
                    <td>@donation.ReceiptNumber</td>
                    <td>@donation.Timestamp?.ToString("yyyy-MM-dd")</td>
                    <td>@donation.OrganizationId</td>
                    <td>@donation.DonorFullName</td>
                    <td>@donation.Amount</td>
                    <td>@donation.PaymentMethod</td>
                    <td>@donation.UserId</td>
                    <td>@donation.CardId</td>
                    <td>@donation.Frequency</td>
                </tr>
            }

        </tbody>
    </table>
</body>
</html>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border: 1px solid #ddd;
    }

    tbody > tr:hover {
        background-color: #f5f5f5;
    }
</style>
