@{
    MyDBContext _context = Model;
    List<Addresses> addresses = _context.Address.ToList();
}

<html>
<head>
    <title>Address List</title>
</head>
<body>
    <h2>Address List</h2>

    <table border="1">
        <thead>
            <tr>
                <th>Address ID</th>
                <th>Street Address</th>
                <th>City</th>
                <th>Region</th>
                <th>Country</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var address in addresses)
            {
                <tr>
                    <td>@address.AddressId</td>
                    <td>@address.Address</td>
                    <td>@address.City</td>
                    <td>@address.Region</td>
                    <td>@address.Country</td>

                    <td>
                        <button onclick="editRow(this)">Edit</button>
                        <button style="display:none;" onclick="saveRow(this, @address.AddressId)">Save</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @section Scripts {
        <script>
            function editRow(button) {
                var row = button.parentNode.parentNode;
                row.classList.add("edit-mode");
                var cells = row.getElementsByTagName("td");

                for (var i = 1; i < cells.length - 1; i++) { // Exclude the first and last cell with buttons
                    var cell = cells[i];
                    var value = cell.innerText;
                    cell.innerHTML = "<input type='text' value='" + value + "'>";
                }

                // Toggle buttons
                button.style.display = "none";
                button.nextElementSibling.style.display = "inline-block";
            }

            function saveRow(button, addressId) {
                var row = button.parentNode.parentNode;
                row.classList.remove("edit-mode");
                var cells = row.getElementsByTagName("td");

                var updatedAddress = {
                    AddressId: parseInt(addressId),
                    Address: cells[1].firstChild.value,
                    City: cells[2].firstChild.value,
                    Region: cells[3].firstChild.value,
                    Country: cells[4].firstChild.value
                };
                var updatedAddressJSONString = JSON.stringify(updatedAddress);

                $.ajax({
                    url: '/Home/EAUpdateAddress',
                    method: 'POST',
                    data: { updatedAddress: updatedAddress },
                    success: function (data) {
                        location.reload();
                    },
                    error: function (error) {
                        console.error('Error updating row:', error);
                    }
                });

                button.style.display = "none";
                button.previousElementSibling.style.display = "inline-block";
            }
        </script>
    }

</body>
</html>

<style>
    table {
        width: 100%;
        border-collapse: collapse;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border: 1px solid #ddd;
    }

    th {
        background-color: lightblue;
    }

    tbody > tr:hover {
        background-color: #f5f5f5;
    }
</style>