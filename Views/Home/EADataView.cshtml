@{
    ViewData["Title"] = "Empathy Admin";

    // Assuming you have a DbContext for your database
    var dbContext = new EmpathyKick.Data.LocalDbContext(); // Replace YourDbContext with your actual DbContext class

    // Retrieve all table names from the database
    var tableNames = dbContext.GetTableNames();
}
@{
    void ShowColumnNames()
    {
        
    }
    if (Context.Request.Method == "POST")
    {
        ShowColumnNames();
    }
}
    <h1>@ViewData["Title"]</h1>
    <form method="post" action="ColumnNamesView">
        <h2>Select up to three tables to view:</h2>

        @for (int i = 0; i < tableNames.Count(); i++)
        {
            <div>
                <input type="checkbox" id="table@(i)" name="selectedTables" value="@tableNames[i]">
                <label for="table@(i)">@tableNames[i]</label>
            </div>
        }

        <br />
        <button type="submit">Submit</button>
    </form>

